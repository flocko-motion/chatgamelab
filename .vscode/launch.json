    "version": "0.2.0",
    "configurations": [
        {
            "name": "CGL Dev Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/server",
            "cwd": "${workspaceFolder}/server",
            "args": [
                "server"
            ],
            "env": {
                "DEV_MODE": "1"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "CGL Dev Server (Attach)",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "host": "127.0.0.1",
            "port": 2345
        },
        {
            "name": "Debug Test Suite",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/testing",
            "cwd": "${workspaceFolder}/testing",
            "args": [
                "-test.run",
                "TestMultiUserSuite"
            ]
        },
        {
            "name": "Debug TestInstitutionManagement",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/testing",
            "cwd": "${workspaceFolder}/testing",
            "args": [
                "-test.run",
                "TestMultiUserSuite/TestInstitutionManagement"
            ]
        },
        {
            "name": "Debug TestWorkshopManagement",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/testing",
            "cwd": "${workspaceFolder}/testing",
            "args": [
                "-test.run",
                "TestMultiUserSuite/TestWorkshopManagement"
            ]
        },
        {
            "name": "Debug TestWorkshopInvites",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/testing",
            "cwd": "${workspaceFolder}/testing",
            "args": [
                "-test.run",
                "TestMultiUserSuite/TestWorkshopInvites"
            ]
        },
        {
            "name": "Debug TestGamePlaythrough",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/testing",
            "cwd": "${workspaceFolder}/testing",
            "args": [
                "-test.run",
                "TestGameEngineTestSuite/TestGamePlaythrough",
                "-test.v"
            ],
            "buildFlags": "-tags=ai_tests"
        },
    ]
}